# Agent Skeptic Bench Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================================================
# API Keys - Required for AI Agent Evaluation
# ==============================================================================

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google AI API Key (for Gemini models)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# ==============================================================================
# Database Configuration
# ==============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://skeptic_user:skeptic_password@localhost:5432/skeptic_bench
POSTGRES_USER=skeptic_user
POSTGRES_PASSWORD=skeptic_password
POSTGRES_DB=skeptic_bench
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==============================================================================
# Application Configuration
# ==============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Application Settings
APP_NAME="Agent Skeptic Bench"
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==============================================================================
# Evaluation Configuration
# ==============================================================================

# Default Evaluation Settings
DEFAULT_CONCURRENCY=5
DEFAULT_TIMEOUT=30
DEFAULT_MAX_TOKENS=1000
DEFAULT_TEMPERATURE=0.7

# Scenario Data Path
SCENARIO_DATA_PATH=./data/scenarios

# Results Storage
RESULTS_STORAGE_PATH=./results
ENABLE_RESULT_PERSISTENCE=true

# ==============================================================================
# Monitoring and Observability
# ==============================================================================

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Logging Configuration
LOG_FILE=./logs/agent_skeptic_bench.log
LOG_ROTATION=true
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ==============================================================================
# External Service Configuration
# ==============================================================================

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@skeptic-bench.org

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#agent-skeptic-bench

# GitHub Integration (optional)
GITHUB_TOKEN=your-github-token
GITHUB_REPO=your-username/agent-skeptic-bench

# ==============================================================================
# Performance and Scaling
# ==============================================================================

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Caching Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Background Job Processing
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKERS=4

# ==============================================================================
# Development and Testing
# ==============================================================================

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_skeptic_bench
TEST_REDIS_URL=redis://localhost:6379/15

# Development Tools
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false
MOCK_AI_RESPONSES=false

# ==============================================================================
# Security and Compliance
# ==============================================================================

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# SSL/TLS Configuration
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key
FORCE_HTTPS=false

# Data Protection
ENABLE_DATA_ENCRYPTION=true
ENCRYPTION_KEY=your-32-character-encryption-key
ENABLE_AUDIT_LOGGING=true

# ==============================================================================
# Third-Party Integrations
# ==============================================================================

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=skeptic-bench-data

# ==============================================================================
# Feature Flags
# ==============================================================================

# Experimental Features
ENABLE_MULTI_AGENT_DEBATES=false
ENABLE_REAL_TIME_EVALUATION=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_SCENARIO_GENERATION=false

# API Features
ENABLE_GRAPHQL=false
ENABLE_WEBHOOKS=false
ENABLE_BATCH_API=true

# ==============================================================================
# Deployment Configuration
# ==============================================================================

# Container Settings
CONTAINER_NAME=agent-skeptic-bench
CONTAINER_REGISTRY=ghcr.io
CONTAINER_TAG=latest

# Kubernetes Settings (if applicable)
NAMESPACE=default
REPLICA_COUNT=3
CPU_LIMIT=1000m
MEMORY_LIMIT=2Gi

# Load Balancer
LOAD_BALANCER_URL=https://api.skeptic-bench.org
HEALTH_CHECK_PATH=/health